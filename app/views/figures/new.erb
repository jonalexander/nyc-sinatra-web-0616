<!-- figure form -->
<h2>Add New Figure</h2>
<form action="/figures" method="POST">
 <label id="figure_name">Name: </label>
 <input id="figure_name" type="text" name="figure[name]">
 <br><br>
 <!-- Landmark Checkboxes -->
 <h3>Choose a Landmark:</h3>
 <% Landmark.all.each do |landmark| %>
 <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>">
  <%= landmark.name %>
 </input>

 <% end %>

 <!-- New Landmark Form -->
 <h3>Add New Landmark</h3>
 <label>Name:</label>
 <input type="text" name="landmark[name]" id="new_landmark"></input>
 <label>Year Completed:</label>
 <input type="number" name="landmark[year_completed]"></input>
 <br><br>

 <!-- Title Checkboxes -->
 <h3>Choose a Title:</h3>
 <% Title.all.each do |title| %>
 <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"> 
 <label> <%= title.name %> </label>
 <% end %>

 <!-- New Title Form -->
 <h3>Add New Title</h3>
 <label id="new_title_name">Name:</label>
 <input type="type" name="title[name]" id="new_title"></input>
 <br><br><br>
 <!-- Submit Button -->
 <input type="submit" value="Create New Figure">
</form>