<h2>Edit <%= @figure.name %></h2>
<!-- Edit Form -->
<form action="/figures/<%= @figure.id %>" method="POST">
 <input name="_method" id="hidden" type="hidden" value="patch">


 <label id="figure_name">Name: </label>
 <input id="figure_name" type="text" name="figure[name]" value="<%= @figure.name %>">
 <br><br>

 <!-- Landmark Checkboxes -->
 <h3>Choose a Landmark:</h3>
 <% Landmark.all.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>
   > <!-- closing first input tag -->
  <label> <%= landmark.name %> </label>
  </input>

 <% end %>

 <!-- New Landmark Form -->
 <h3>Add New Landmark</h3>
 <label>Name:</label>
 <input type="type" name="landmark[name]" id="new_landmark"></input>
 <label>Year Completed:</label>
 <input type="number" name="landmark[year_completed]"></input>
 <br><br>

 <!-- Title Checkboxes -->
 <h3>Choose a Title:</h3>
 <% Title.all.each do |title| %>
 <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"
  <%= 'checked' if @figure.titles.include?(title) %>
  > <!-- closing first input tag --> 
  <label> <%= title.name %> </label>
 <% end %>

 <!-- New Title Form -->
 <h3>Add New Title</h3>
 <label id="new_title_name">Name:</label>
 <input type="type" name="title[name]" id="new_title"></input>
 <br><br><br>

 <!-- Submit Button -->
 <input type="submit" value="Edit Figure">
</form>